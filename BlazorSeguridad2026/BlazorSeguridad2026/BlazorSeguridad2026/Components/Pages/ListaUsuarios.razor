@page "/ListaUsuarios"
@rendermode @(new InteractiveServerRenderMode(prerender: true))

@using BlazorSeguridad2026.Base.Genericos
@using BlazorSeguridad2026.Base.Seguridad
@using BlazorSeguridad2026.Data.Modelo
@using BlazorSeguridad2026.Data.Servicios

@inject IUnitOfWorkFactory UnitOfWorkFactory 
@inject IContextProvider ContextProvider 

@inject NavigationManager nav
@implements IDisposable
@inject PersistentComponentState PersistenceAppState



<h3>Listado de usuarios  (Genérico)</h3>



@if (_isValidContext == false)
{
    <p><em>Debe seleccionar un contexto de ejecución para ver los usuarios...</em></p>
}
else if (!usuarios.Any())
{
    <p>No hay usuarios registrados .....</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>UserName</th>
                <th>Codigo</th>
                <th>Nivel</th>
                <th>Password</th>
                <th>Email</th>
                <th>Tenant</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in usuarios)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Codigo</td>
                    <td>@user.Contexto</td>
                    <td>@user.Password</td>
                    <td>@user.Email</td>
                    <td>@user.TenantId</td>
                    <td><a href="DetalleUsuario/@user.Id"><i>Edit</i></a></td>
                    <td><a href="DeteteUsuario/@user.Id"><i>Del</i></a></td>
                </tr>
            }
        </tbody>
    </table>    
}


@code {


    [PersistentState]
    public List<Usuario>? usuarios { get; set; } = new List<Usuario>();
    int TenantId;
    string ContextoKey ="Key";

    bool _isValidContext;

    private Action? _onContextChangedHandler;

    protected override async Task OnInitializedAsync()
    {
        _onContextChangedHandler += async () =>
        {
            await ActualizarContextoAsync();
            await CargarDatosAsync();

        };
        ContextProvider.OnContextChanged += _onContextChangedHandler;
        CargarDatosAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await ActualizarContextoAsync();
            await CargarDatosAsync();
        }
    }

    private async Task ActualizarContextoAsync()
    {
            if (ContextProvider.IsValid())
            {  
                await ContextProvider.ReadAllContext(false);

            }        
    }


    private async Task CargarDatosAsync()
    {
        try
        {
            if (ContextProvider.IsValid())
            {  
                ServicioUsuarios? servicioUsuarios = null;
                if (servicioUsuarios is null)
                servicioUsuarios = new ServicioUsuarios(ContextProvider, UnitOfWorkFactory);
                var list = await servicioUsuarios.ObtenerTodosAsync(true);
                if (list is null) return;
                usuarios = list.ToList();
                _isValidContext = true;                
            }
            else _isValidContext = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {

            throw;
        }
    }

    void IDisposable.Dispose()
    {
        Dispose();
    }

    private void Dispose()
    {
  
        ContextProvider.OnContextChanged -= _onContextChangedHandler;

    }
}

