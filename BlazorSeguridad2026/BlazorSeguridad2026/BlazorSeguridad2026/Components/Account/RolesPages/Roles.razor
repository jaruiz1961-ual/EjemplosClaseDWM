@page "/roles"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@* @attribute [Authorize] *@

@inject IRoleService RoleService

<h3>Roles</h3>

@if (!string.IsNullOrEmpty(error))
{
    <div class="alert alert-danger">@error</div>
}
@if (!string.IsNullOrEmpty(success))
{
    <div class="alert alert-success">@success</div>
}

<h4>Crear rol</h4>
<input @bind="newRoleName" placeholder="Nombre de rol" />
<button @onclick="CreateRole">Crear</button>

<h4>Lista de roles</h4>

@if (roles is null)
{
    <p>Cargando...</p>
}
else if (roles.Count == 0)
{
    <p>No hay roles.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in roles)
            {
                <tr>
                    <td>@r.Id</td>
                    <td>@r.Name</td>
                    <td>
                        <button @onclick="() => DeleteRole(r.Id)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<IdentityRole>? roles;
    private string newRoleName = string.Empty;
    private string? error;
    private string? success;

    protected override async Task OnInitializedAsync()
    {
        await LoadRolesAsync();
    }

    private async Task LoadRolesAsync()
    {
        roles = await RoleService.GetAllAsync();
    }

    private async Task CreateRole()
    {
        error = success = null;

        if (string.IsNullOrWhiteSpace(newRoleName))
        {
            error = "El nombre es obligatorio.";
            return;
        }

        var result = await RoleService.CreateAsync(newRoleName);

        if (result.Succeeded)
        {
            success = "Rol creado.";
            newRoleName = string.Empty;
            await LoadRolesAsync();
        }
        else
        {
            error = string.Join(" ", result.Errors.Select(e => e.Description));
        }
    }

    private async Task DeleteRole(string id)
    {
        error = success = null;

        var result = await RoleService.DeleteAsync(id);
        if (result.Succeeded)
        {
            success = "Rol eliminado.";
            await LoadRolesAsync();
        }
        else
        {
            error = string.Join(" ", result.Errors.Select(e => e.Description));
        }
    }
}
