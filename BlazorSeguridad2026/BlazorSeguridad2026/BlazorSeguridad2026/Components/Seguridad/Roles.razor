@page "/roles"
@using BlazorSeguridad2026.Data
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@* @attribute [Authorize(Roles = "Admin")] *@

@inject IRoleService RoleService
@inject NavigationManager Nav
@inject UserManager<ApplicationRole> RoleManager

<h3>Roles</h3>

@if (!string.IsNullOrEmpty(error))
{
    <div class="alert alert-danger">@error</div>
}
@if (!string.IsNullOrEmpty(success))
{
    <div class="alert alert-success">@success</div>
}

<button class="btn btn-primary mb-3"
        type="button"
        data-bs-toggle="modal"
        data-bs-target="#createRoleModal">
    Nuevo rol
</button>

<table class="table table-striped table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Nombre</th>
            <th style="width: 260px;"></th>
        </tr>
    </thead>
    <tbody>
        @if (roles is null)
        {
            <tr>
                <td colspan="2">Cargando...</td>
            </tr>
        }
        else if (roles.Count == 0)
        {
            <tr>
                <td colspan="2">No hay roles.</td>
            </tr>
        }
        else
        {
            @foreach (var r in roles)
            {
                <tr class="@(editingRoleId == r.Id ? "table-primary" : "")">
                    <!-- Nombre -->
                    <td>
                        @if (editingRoleId == r.Id)
                        {
                            <InputText class="form-control form-control-sm"
                                       @bind-Value="editRoleName" />
                        }
                        else
                        {
                            @r.Name
                        }
                    </td>

                    <!-- Acciones -->
                    <td class="text-end">
                        @if (editingRoleId == r.Id)
                        {
                            <button class="btn btn-sm btn-success me-1"
                                    @onclick="SaveEdit">
                                Guardar
                            </button>
                            <button class="btn btn-sm btn-secondary"
                                    @onclick="CancelEdit">
                                Cancelar
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-sm btn-outline-info me-1"
                                    @onclick="@(() => Nav.NavigateTo($"/roles/{r.Id}/users"))">
                                Usuarios
                            </button>
                            <button class="btn btn-sm btn-outline-primary me-1"
                                    @onclick="() => StartEdit(r)">
                                Editar
                            </button>
                            <button class="btn btn-sm btn-outline-danger"
                                    @onclick="() => DeleteRole(r.Id)">
                                Eliminar
                            </button>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<!-- Modal para alta de rol -->
<div class="modal fade" id="createRoleModal" tabindex="-1"
     aria-labelledby="createRoleLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <EditForm Model="newRoleModel" OnValidSubmit="HandleCreateRole">
                <DataAnnotationsValidator />
                <div class="modal-header">
                    <h5 class="modal-title" id="createRoleLabel">Nuevo rol</h5>
                    <button type="button" class="btn-close"
                            data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <ValidationSummary />

                    <div class="mb-2">
                        <label class="form-label">Nombre</label>
                        <InputText class="form-control"
                                   @bind-Value="newRoleModel.Name" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary"
                            data-bs-dismiss="modal">
                        Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        Crear
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private List<ApplicationRole>? roles;
    private string? error;
    private string? success;

    private int editingRoleId;
    private string? editRoleName;

    private class NewRoleModel
    {
        public string Name { get; set; } = string.Empty;
    }

    private NewRoleModel newRoleModel = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadRolesAsync();
    }

    private async Task LoadRolesAsync()
    {
        roles = await RoleService.GetAllAsync();
    }

    private void StartEdit(ApplicationRole role)
    {
        editingRoleId = role.Id;
        editRoleName = role.Name;
        error = success = null;
    }

    private void CancelEdit()
    {
        editingRoleId = 0;
        editRoleName = null;
    }

    private async Task SaveEdit()
    {
        if (editingRoleId == 0 || string.IsNullOrWhiteSpace(editRoleName))
        {
            error = "Nombre de rol no válido.";
            return;
        }

        error = success = null;

        var result = await RoleService.UpdateNameAsync(editingRoleId, editRoleName);

        if (result.Succeeded)
        {
            success = "Rol actualizado.";
            editingRoleId = 0;
            editRoleName = null;
            await LoadRolesAsync();
        }
        else
        {
            error = string.Join(" ", result.Errors.Select(e => e.Description));
        }
    }

    private async Task HandleCreateRole()
    {
        error = success = null;

        if (string.IsNullOrWhiteSpace(newRoleModel.Name))
        {
            error = "El nombre es obligatorio.";
            return;
        }

        var result = await RoleService.CreateAsync(newRoleModel.Name);

        if (result.Succeeded)
        {
            success = "Rol creado.";
            newRoleModel = new NewRoleModel();
            await LoadRolesAsync();
        }
        else
        {
            error = string.Join(" ", result.Errors.Select(e => e.Description));
        }
    }

    private async Task DeleteRole(int id)
    {
        error = success = null;

        var result = await RoleService.DeleteAsync(id);
        if (result.Succeeded)
        {
            success = "Rol eliminado.";
            await LoadRolesAsync();
        }
        else
        {
            error = string.Join(" ", result.Errors.Select(e => e.Description));
        }
    }
}
