@page "/ListaUsuariosCliente"
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))


@using BlazorSeguridad2026.Base.Genericos
@using BlazorSeguridad2026.Base.Seguridad


@using BlazorSeguridad2026.Data.Modelo
@using BlazorSeguridad2026.Data.Servicios
@using Microsoft.AspNetCore.Authorization



@inject IUnitOfWorkFactory UnitOfWorkFactory
@inject IContextProvider ContextProvider
@inject NavigationManager nav
@implements IDisposable

@attribute [Authorize]

<h3>Listado de usuarios CLIENTE</h3>

cliente: @estadoCliente
servidor:@estadoServidor


@if (_isValidContext == false)
{
    <p><em>Debe seleccionar un contexto de ejecución para ver los usuarios...</em></p>
}
else if (!usuarios.Any())
{
    <p>No hay usuarios registrados .....</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>UserName</th>
                <th>Codigo</th>
                <th>Nivel</th>
                <th>Password</th>
                <th>Email</th>
                <th>Tenant</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in usuarios)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Codigo</td>
                    <td>@user.Contexto</td>
                    <td>@user.Password</td>
                    <td>@user.email</td>
                    <td>@user.TenantId</td>
                    <td><a href="DetalleUsuarioCliente/@user.Id"><i>Edit</i></a></td>
                    <td><a href="DeteteUsuarioCliente/@user.Id"><i>Del</i></a></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {

    int currentCount = 0;
    private bool _initialized;
    private bool _isInitializing;
    private string estadoCliente = "";
    private string estadoServidor;
    bool _isValidContext;
    public List<Usuario>? usuarios { get; set; } = new();
    private ServicioUsuariosCliente? scUsuario;

    // proxy síncrono para el evento
    private void OnContextChangedProxy() => _ = HandleContextChangedAsync();



    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender || _isInitializing || _initialized)
            return;

        _isInitializing = true;

        // 1. Suscribirse a eventos del contexto
        ContextProvider.OnContextChanged += OnContextChangedProxy;

        // 2. Inicializar desde localStorage (JS interop seguro aquí)
        await ContextProvider.ReadAllContext(true);

        // 3. Leer estado actual
        estadoCliente = ContextProvider.GetValor(ClavesEstado.PaginaCliente) ?? "Ninguno";
        estadoServidor = ContextProvider.GetValor(ClavesEstado.PaginaServidor) ?? "Ninguno";


        // 4. Persistir de nuevo en el contexto

        await ContextProvider.UpdateEstadoContext();

        _initialized = true;
        _isInitializing = false;

        await CargarAsync();
    }


    private async Task HandleContextChangedAsync()
    {
        // 6. Reaccionar a cambios posteriores de contexto
        await CargarAsync();
        InvokeAsync(StateHasChanged);
    }


    private async Task CargarAsync()
    {
        try
        {
            if (ContextProvider.IsValid())
            {
                await ContextProvider.ReadAllContext(false);
                scUsuario = new ServicioUsuariosCliente(ContextProvider, UnitOfWorkFactory);
                var list = await scUsuario.ObtenerTodosAsync(true);
                if (list is null) return;
                usuarios = list.ToList();
                _isValidContext = true;
            }
            else _isValidContext = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {

            throw;
        }
    }


    private async void IncrementCount()
    {

        currentCount++;
        // 4. Persistir de nuevo en el contexto
        ContextProvider.SetClaveValor(ClavesEstado.PaginaCliente, "COUNTER=" + currentCount.ToString());
        if (scUsuario != null)
        {
            var list = await scUsuario.ObtenerTodosAsync(false);
            if (list is null) return;
            usuarios = list.ToList();
            await ContextProvider.UpdateEstadoContext();
        }
    }
  

    public void Dispose()
    {
        // 7. Desuscribirse para evitar fugas de memoria
        ContextProvider.OnContextChanged -= OnContextChangedProxy;
    }
}
