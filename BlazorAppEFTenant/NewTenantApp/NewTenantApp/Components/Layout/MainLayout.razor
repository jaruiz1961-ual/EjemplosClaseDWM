@using DataBase
@using DataBase.Genericos
@using Microsoft.AspNetCore.Components.Authorization

@inherits LayoutComponentBase
@inject NavigationManager Nav
@inject IContextProvider ContextProvider
@inject AuthenticationStateProvider AuthStateProvider

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            @if (_initialized && _isAuthenticated)
            {
                <button class="btn btn-link" @onclick="Logout">Logout</button>
            }
            else if (_initialized && !_isAuthenticated)
            {
                <a href="Login">Login</a>
            }
            else
            {
                <span>Cargando...</span>
            }
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private bool _initialized;
    private bool _isAuthenticated;

    protected override async Task OnInitializedAsync()
    {
        // Estado inicial (antes de leer LocalStorage)
        await LoadAuthStateAsync();

        if (AuthStateProvider is ContextProvider cp)
        {
            cp.OnContextChanged += OnContextChanged;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!_initialized)
        {
            // Aquí ya hay JS disponible: podemos cargar appstate desde LocalStorage
            await ContextProvider.ReadContext();
            await LoadAuthStateAsync();
            _initialized = true;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task LoadAuthStateAsync()
    {
        var state = await AuthStateProvider.GetAuthenticationStateAsync();
        _isAuthenticated = state.User.Identity?.IsAuthenticated == true;
    }

    private void OnContextChanged()
    {
        InvokeAsync(async () =>
        {
            await LoadAuthStateAsync();
            StateHasChanged();
        });
    }

    private async Task Logout()
    {
        await ContextProvider.SetContext(
            tenantId: ContextProvider._AppState.TenantId,
            dbKey: ContextProvider._AppState.DbKey,
            apiName: ContextProvider._AppState.ApiName,
            dirBase: ContextProvider._AppState.DirBase,
            connectionMode: ContextProvider._AppState.ConnectionMode,
            token: null
        );

        await LoadAuthStateAsync();
        Nav.NavigateTo("/Home", forceLoad: true);
    }

    public void Dispose()
    {
        if (AuthStateProvider is ContextProvider cp)
        {
            cp.OnContextChanged -= OnContextChanged;
        }
    }
}
