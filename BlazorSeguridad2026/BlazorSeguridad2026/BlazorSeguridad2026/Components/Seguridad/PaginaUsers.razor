@page "/users"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using BlazorSeguridad2026.Data
@using Shares.Genericos

@using Shares.Seguridad
@using Shares.Servicios
@inject IUnitOfWorkFactory UnitOfWorkFactory
@inject IContextProvider ContextProvider
@* @attribute [Authorize(Roles = "Admin")] *@
@inject UserManager<ApplicationUser> UserManager


@inject NavigationManager Nav

<h3>Usuarios</h3>

@if (!string.IsNullOrEmpty(error))
{
    <div class="alert alert-danger">@error</div>
}
@if (!string.IsNullOrEmpty(success))
{
    <div class="alert alert-success">@success</div>
}

<button class="btn btn-primary mb-3"
        type="button"
        data-bs-toggle="modal"
        data-bs-target="#createUserModal">
    Nuevo usuario
</button>

<table class="table table-striped table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Email</th>
            <th>TenantId</th>
            <th>KeyDb</th>
            <th style="width: 260px;"></th>
        </tr>
    </thead>
    <tbody>
        @if (users is null)
        {
            <tr>
                <td colspan="4">Cargando...</td>
            </tr>
        }
        else if (users.Count == 0)
        {
            <tr>
                <td colspan="4">No hay usuarios.</td>
            </tr>
        }
        else
        {
            @foreach (var u in users)
            {
                <tr class="@(selectedUserId == u.Id ? "table-primary" : "")">
                    <!-- Email -->
                    <td>
                        @if (editingUserId == u.Id)
                        {
                            <InputText class="form-control form-control-sm"
                                       @bind-Value="editEmail" />
                        }
                        else
                        {
                            @u.Email
                        }
                    </td>

                    <!-- TenantId -->
                    <td>
                        @if (editingUserId == u.Id)
                        {
                            <InputNumber class="form-control form-control-sm"
                                         @bind-Value="editTenantId" />
                        }
                        else
                        {
                            @u.TenantId
                        }
                    </td>

                    <!-- KeyDb -->
                    <td>
                        @if (editingUserId == u.Id)
                        {
                            <InputText class="form-control form-control-sm"
                                       @bind-Value="editKeyDb" />
                        }
                        else
                        {
                            @u.DbKey
                        }
                    </td>

                    <!-- Acciones -->
                    <td class="text-end">
                        @if (editingUserId == u.Id)
                        {
                            <button class="btn btn-sm btn-success me-1"
                                    @onclick="SaveEdit">
                                Guardar
                            </button>
                            <button class="btn btn-sm btn-secondary"
                                    @onclick="CancelEdit">
                                Cancelar
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-sm btn-outline-info me-1"
                                    @onclick="@(() => Nav.NavigateTo($"/users/{u.Id.ToString()}/roles"))">
                                Roles
                            </button>
                            <button class="btn btn-sm btn-outline-primary me-1"
                                    @onclick="() => StartEdit(u)">
                                Editar
                            </button>
                            <button class="btn btn-sm btn-outline-danger"
                                    @onclick="() => DeleteUser(u.Id)">
                                Borrar
                            </button>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<!-- Modal para alta de usuario -->
<div class="modal fade" id="createUserModal" tabindex="-1"
     aria-labelledby="createUserLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <EditForm Model="newUserModel" OnValidSubmit="HandleCreateUser">
                <DataAnnotationsValidator />
                <div class="modal-header">
                    <h5 class="modal-title" id="createUserLabel">Nuevo usuario</h5>
                    <button type="button" class="btn-close"
                            data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <ValidationSummary />

                    <div class="mb-2">
                        <label class="form-label">Email</label>
                        <InputText class="form-control"
                                   @bind-Value="newUserModel.Email" />
                    </div>

                    <div class="mb-2">
                        <label class="form-label">Password</label>
                        <InputText class="form-control" type="password"
                                   @bind-Value="newUserModel.Password" />
                    </div>

                    <div class="mb-2">
                        <label class="form-label">TenantId</label>
                        <InputNumber class="form-control"
                                     @bind-Value="newUserModel.TenantId" />
                    </div>

                    <div class="mb-2">
                        <label class="form-label">KeyDb</label>
                        <InputText class="form-control"
                                   @bind-Value="newUserModel.DbKey" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary"
                            data-bs-dismiss="modal">
                        Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        Crear
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private List<ApplicationUser>? users;
    private string? error;
    private string? success;
    bool _isValidContext;
    UserServiceMio userService;

    private int editingUserId;
    private int selectedUserId;

    private string? editEmail;
    private int? editTenantId;
    private string? editKeyDb;

    private class NewUserModel
    {
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
        public int? TenantId { get; set; }
        public string? DbKey { get; set; }
    }

    private NewUserModel newUserModel = new();

    private Action? _onContextChangedHandler;

    protected override async Task OnInitializedAsync()
    {
        _onContextChangedHandler += async () =>
        {
            await LoadUsersAsync();

        };


        ContextProvider.OnContextChanged += _onContextChangedHandler;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
            await LoadUsersAsync();

    }


    private async Task LoadUsersAsync()
    {
        try
        {
            if (ContextProvider.IsValid())
            {
                await ContextProvider.ReadAllContext();
                var cp = ContextProvider.Copia();
                cp._AppState.DbKey = "Application";
                userService= new UserServiceMio(UserManager, cp, UnitOfWorkFactory);
                var list = await userService.GetAllAsync();
                if (list is null) return;           
                users = list.ToList();
                newUserModel.TenantId = ContextProvider._AppState.TenantId;
                newUserModel.DbKey = ContextProvider._AppState.DbKey;
                _isValidContext = true;
            }
            else _isValidContext = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {

            throw;
        }
    }

    private void StartEdit(ApplicationUser u)
    {
        editingUserId = u.Id;
        selectedUserId = u.Id;

        editEmail = u.Email;
        editTenantId = ContextProvider._AppState.TenantId;
        editKeyDb = ContextProvider._AppState.DbKey;

        error = success = null;
    }

    private void CancelEdit()
    {
        editingUserId = 0;
        editEmail = null;
        editTenantId = null;
        editKeyDb = null;
    }

    private async Task SaveEdit()
    {
        if (editingUserId == 0 || string.IsNullOrWhiteSpace(editEmail))
        {
            error = "Datos de edición no válidos.";
            return;
        }

        error = success = null;

        var result = await userService.UpdateUserAsync(
            editingUserId,
            user =>
            {
                user.Email = editEmail;
                user.UserName = editEmail;
                user.TenantId = editTenantId;
                user.DbKey = editKeyDb;
            });

        if (result.Succeeded)
        {
            success = "Usuario actualizado.";
            editingUserId = 0;
            editEmail = null;
            editTenantId = null;
            editKeyDb = null;
            await LoadUsersAsync();
        }
        else
        {
            error = string.Join(" ", result.Errors.Select(e => e.Description));
        }
    }

    private async Task DeleteUser(int id)
    {
        error = success = null;

        var result = await userService.DeleteAsync(id);
        if (result.Succeeded)
        {
            success = "Usuario borrado.";
            if (selectedUserId == id)
            {
                selectedUserId = 0;
            }
            await LoadUsersAsync();
        }
        else
        {
            error = string.Join(" ", result.Errors.Select(e => e.Description));
        }
    }

    private async Task HandleCreateUser()
    {
        error = success = null;

        if (string.IsNullOrWhiteSpace(newUserModel.Email) ||
            string.IsNullOrWhiteSpace(newUserModel.Password))
        {
            error = "Email y password son obligatorios.";
            return;
        }

        var result = await userService.CreateAsync(
            newUserModel.Email,
            newUserModel.Password,
            newUserModel.TenantId,
            newUserModel.DbKey);

        if (result.Succeeded)
        {
            success = "Usuario creado.";
            newUserModel = new NewUserModel();
            await LoadUsersAsync();
            // El modal se cierra solo por data-bs-dismiss en el botón, si quieres cerrarlo por código
            // necesitarías JS interop.
        }
        else
        {
            error = string.Join(" ", result.Errors.Select(e => e.Description));
        }
    }
    private void Dispose()
    {

        ContextProvider.OnContextChanged -= _onContextChangedHandler;

    }
}
