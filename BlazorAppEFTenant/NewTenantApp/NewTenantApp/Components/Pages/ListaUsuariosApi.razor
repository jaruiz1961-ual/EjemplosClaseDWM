@page "/ListaUsuariosApi"
@rendermode @(new InteractiveServerRenderMode(prerender: false))

@using BlazorAppEFTenant.Components.Layout
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using DataBase.Genericos
@using DataBase.Modelo
@using DataBase.Servicios

@inject IUnitOfWorkFactory UnitOfWorkFactory 
@inject IContextProvider ContextProvider
@inject NavigationManager nav
@implements IDisposable



<MyAuthorizeView RequiredRole="Admin">
    <Authorized>
        <h3>Zona Admin</h3>
<h3>Listado de usuarios Api (Genérico)</h3>


<p>TenantId <strong>@ContextProvider.TenantId</strong>:</p>
<p>ContextKeDb <strong>@ContextProvider.DbKey</strong>:</p>
<p>Mode <strong>@ContextProvider.ConnectionMode</strong>:</p>
<p>Token <strong>@ContextProvider.Token</strong>:</p>
@if (@ContextProvider.ConnectionMode != "Ef")
{
    <p>ApiName <strong>@ContextProvider.ApiName</strong>:</p>
}


@if (usuarios is null)
{
    <p><em>Cargando...</em></p>
}
else if (!usuarios.Any())
{
    <p>No hay usuarios registrados .....</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>UserName</th>
                <th>Codigo</th>
                <th>Nivel</th>
                <th>Password</th>
                <th>Email</th>
                <th>Tenant</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in usuarios)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Codigo</td>
                    <td>@user.Contexto</td>
                    <td>@user.Password</td>
                    <td>@user.email</td>
                    <td>@user.TenantId</td>
                    <td><a href="DetalleUsuario/@user.Id"><i>Edit</i></a></td>
                    <td><a href="DeteteUsuario/@user.Id"><i>Del</i></a></td>
                </tr>
            }
        </tbody>
    </table>

}
    </Authorized>
    <NotAuthorized>
        <h3>No tienes permisos para ver esta página.</h3>
        <p>Puedes ir a la página principal o iniciar sesión con otra cuenta.</p>
        <button class="btn btn-primary" @onclick="IrALogin">Ir a Login</button>
    </NotAuthorized>
</MyAuthorizeView>


@code {
    public List<Usuario>? usuarios { get; set; } = new List<Usuario>();
    private GenericDataService<Usuario> usuarioService;

    private Func<Task>? _onContextChangedHandler;
    void IrALogin()
       => nav.NavigateTo("/login");

    protected override async Task OnInitializedAsync()
    {
        _onContextChangedHandler += async () =>
        {
            await CargarAsync();
            StateHasChanged();
        };


        ContextProvider.OnContextChanged += _onContextChangedHandler;
    
    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        await CargarAsync();

    }

    private async Task CargarAsync()
    {

        try
        {
            await ContextProvider.ReadContext();
            IContextProvider cp = ContextProvider.Copia();
            cp.ConnectionMode = "Api";

            usuarioService = new ServicioUsuarios(cp, UnitOfWorkFactory);
            var list = await usuarioService.GetAllAsync();
            usuarios = list.ToList();

        }
        catch (Exception ex)
        {
            Console.WriteLine("EX: " + ex.GetType().FullName);
            Console.WriteLine(ex.ToString());
            Console.WriteLine("INNER: " + ex.InnerException?.GetType().FullName);
            Console.WriteLine(ex.InnerException?.ToString());
            throw;
        }
    }

    void IDisposable.Dispose()
    {
        Dispose();
    }

    private void Dispose()
    {

        ContextProvider.OnContextChanged -= _onContextChangedHandler;

    }
}

