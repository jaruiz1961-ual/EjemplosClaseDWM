@page "/weather"

@using Shares.Genericos
@* @attribute [StreamRendering] *@
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@inject IContextProvider ContextProvider

<PageTitle>Weather</PageTitle>

<h1>Weather</h1>

cliente: @estadoCliente
servidor:@estadoServidor

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<p>This component demonstrates showing data.</p>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th aria-label="Temperature in Celsius">Temp. (C)</th>
                <th aria-label="Temperature in Fahrenheit">Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in forecasts)
            {
                <tr>
                    <td>@forecast.Date.ToShortDateString()</td>
                    <td>@forecast.TemperatureC</td>
                    <td>@forecast.TemperatureF</td>
                    <td>@forecast.Summary</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private WeatherForecast[]? forecasts;
    //Seguridad seguridad = null;
    private async void IncrementCount()
    {


        // 4. Persistir de nuevo en el contexto
        ContextProvider.SetClaveValor(ClavesEstado.PaginaServidor,estadoServidor);
        await ContextProvider.UpdateEstadoContext();
    }


    protected override async Task OnInitializedAsync()
    {
       // await Task.Delay(500);   no se peuden poner await en la inicializacion 

        var startDate = DateOnly.FromDateTime(DateTime.Now);
        var summaries = new[]
        {
        "Freezing", "Bracing", "Chilly", "Cool", "Mild",
        "Warm", "Balmy", "Hot", "Sweltering", "Scorching"
         };

        forecasts = Enumerable.Range(1, 5).Select(index => new WeatherForecast
        {
            Date = startDate.AddDays(index),
            TemperatureC = Random.Shared.Next(-20, 55),
            Summary = summaries[index]
        }).ToArray();
    }

    private bool _initialized;
    private bool _isInitializing;
    private string estadoCliente = "";
    private string estadoServidor = "";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        // Solo queremos ejecutar la inicialización una vez y evitar reentradas
        if (!firstRender || _isInitializing || _initialized)
            return;

        _isInitializing = true;

        // 1. Suscribirse a eventos del contexto
        ContextProvider.OnContextChanged += HandleContextChanged;

        // 2. Inicializar desde localStorage (JS interop seguro aquí)
        await ContextProvider.ReadAllContext();

        // 3. Leer estado actual
        estadoCliente = ContextProvider.GetValor(ClavesEstado.PaginaCliente) ?? "COUNTER=0";
        var valores = estadoCliente.Split('=');
        int contador = int.Parse(valores[1]);
        if (contador >5)
            contador = 0;
        if (forecasts == null) return;
        estadoServidor = forecasts[contador].Summary.ToString();

        // 4. Persistir de nuevo en el contexto

        // Después de calcular estadoServidor en OnAfterRenderAsync
        ContextProvider.SetClaveValor(ClavesEstado.PaginaServidor, estadoServidor);
        await ContextProvider.UpdateEstadoContext();



        _initialized = true;
        _isInitializing = false;

        // 5. Renderizar de nuevo con el estado definitivo
        StateHasChanged();
    }

    private void HandleContextChanged()
    {
        // 6. Reaccionar a cambios posteriores de contexto
        estadoCliente = ContextProvider.GetValor(ClavesEstado.PaginaCliente);
        estadoServidor = ContextProvider.GetValor(ClavesEstado.PaginaServidor);
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        // 7. Desuscribirse para evitar fugas de memoria
        ContextProvider.OnContextChanged -= HandleContextChanged;
    }




       
    
    private class WeatherForecast
    {
        public DateOnly Date { get; set; }
        public int TemperatureC { get; set; }
        public string? Summary { get; set; }
        public int TemperatureF => 32 + (int)(TemperatureC / 0.5556);
    }
}
