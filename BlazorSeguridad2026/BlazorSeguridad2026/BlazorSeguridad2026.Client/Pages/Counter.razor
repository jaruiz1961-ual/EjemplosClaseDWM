@page "/counter"
@rendermode InteractiveWebAssembly
@using DataBase.Genericos
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject AuthenticationStateProvider AuthStateProvider
@inject IContextProvider ContextProvider

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private ClaimsPrincipal? user;
    private string? AppState;
    private string? TenantId;
    private string? DbKey;
    protected override async Task OnInitializedAsync()
    {
        await ContextProvider.ReadContext();
        var state = await AuthStateProvider.GetAuthenticationStateAsync();
        user = state.User;

        AppState = user.FindFirst("AppState")?.Value;
        TenantId = user.FindFirst("TenantId")?.Value;
        DbKey = user.FindFirst("DbKey")?.Value;
    }
}
