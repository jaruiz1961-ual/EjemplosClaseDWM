@page "/roles"
@using Microsoft.AspNetCore.Identity
@using Shares.Genericos
@using Shares.Seguridad
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@inject IRoleService RoleServiceMio
@inject NavigationManager Nav
@inject IContextProvider ContextProvider

@using Shares.Servicios
@inject IUnitOfWorkFactory UnitOfWorkFactory
@inject IContextProvider ContextProvider
@* @attribute [Authorize(Roles = "Admin")] *@
@inject RoleManager<ApplicationRole> RoleManager


<h3>Roles</h3>

@if (!string.IsNullOrEmpty(error))
{
    <div class="alert alert-danger">@error</div>
}
@if (!string.IsNullOrEmpty(success))
{
    <div class="alert alert-success">@success</div>
}

<button class="btn btn-primary mb-3"
        type="button"
        data-bs-toggle="modal"
        data-bs-target="#createRoleModal">
    Nuevo rol
</button>

<table class="table table-striped table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Nombre</th>
            <th>TenantId</th>
            <th>DbKey</th>
            <th style="width: 260px;"></th>
        </tr>
    </thead>
    <tbody>
        @if (roles is null)
        {
            <tr>
                <td colspan="2">Cargando...</td>
            </tr>
        }
        else if (roles.Count == 0)
        {
            <tr>
                <td colspan="2">No hay roles.</td>
            </tr>
        }
        else
        {
            @foreach (var r in roles)
            {
                <tr class="@(editingRoleId == r.Id ? "table-primary" : "")">
                    <!-- Nombre -->
                    <td>
                        @if (editingRoleId == r.Id)
                        {
                            <InputText class="form-control form-control-sm"
                                       @bind-Value="editRoleName" />
                        }
                        else
                        {
                            @r.Name  
                        }
                    </td>
                    <td>
                        @if (editingRoleId == r.Id)
                        {

                            <InputNumber class="form-control form-control-sm"
                                         @bind-Value="editTenantId" />
                        }
                        else
                        {
                            @r.TenantId
                        }
                    </td>
                    <td>
                        @if (editingRoleId == r.Id)
                        {
                            <InputText class="form-control form-control-sm"
                                       @bind-Value="editDbKey" />
                        }
                        else
                        {
                            @r.DbKey
                        }
                    </td>

                    <!-- Acciones -->
                    <td class="text-end">
                        @if (editingRoleId == r.Id)
                        {
                            <button class="btn btn-sm btn-success me-1"
                                    @onclick="SaveEdit">
                                Guardar
                            </button>
                            <button class="btn btn-sm btn-secondary"
                                    @onclick="CancelEdit">
                                Cancelar
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-sm btn-outline-info me-1"
                                    @onclick="@(() => Nav.NavigateTo($"/roles/{r.Id}/users"))">
                                Usuarios
                            </button>
                            <button class="btn btn-sm btn-outline-primary me-1"
                                    @onclick="() => StartEdit(r)">
                                Editar
                            </button>
                            <button class="btn btn-sm btn-outline-danger"
                                    @onclick="() => DeleteRole(r.Id)">
                                Eliminar
                            </button>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<!-- Modal para alta de rol -->
<div class="modal fade" id="createRoleModal" tabindex="-1"
     aria-labelledby="createRoleLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <EditForm Model="newRoleModel" OnValidSubmit="HandleCreateRole">
                <DataAnnotationsValidator />
                <div class="modal-header">
                    <h5 class="modal-title" id="createRoleLabel">Nuevo rol</h5>
                    <button type="button" class="btn-close"
                            data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <ValidationSummary />

                    <div class="mb-2">
                        <label class="form-label">Nombre</label>
                        <InputText class="form-control"
                                   @bind-Value="newRoleModel.Name" />
                    </div>

                    <div class="mb-2">
                        <label class="form-label">TenantId</label>
                        <InputNumber class="form-control"
                                   @bind-Value="newRoleModel.TenantId" />
                    </div>

                    <div class="mb-2">
                        <label class="form-label">DbKey</label>
                        <InputText class="form-control"
                                   @bind-Value="newRoleModel.DbKey" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary"
                            data-bs-dismiss="modal">
                        Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        Crear
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private List<ApplicationRole>? roles;
    private string? error;
    private string? success;
    bool _isValidContext;

    private int editingRoleId;
    private string? editRoleName;
    private int editTenantId;
    private string editDbKey = string.Empty;

    private class NewRoleModel
    {
        public string Name { get; set; } = string.Empty;
        public int? TenantId { get; set; }
        public string DbKey { get; set; } = string.Empty;
    }

    private NewRoleModel newRoleModel = new();


    private Action? _onContextChangedHandler;

    protected override async Task OnInitializedAsync()
    {
        _onContextChangedHandler += async () =>
        {
            await LoadRolesAsync();

        };


        ContextProvider.OnContextChanged += _onContextChangedHandler;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
            await LoadRolesAsync();

    }

    private async Task LoadRolesAsync()
    {
        try
        {
            if (ContextProvider.IsValid())
            {
                await ContextProvider.ReadAllContext();
                var cp = ContextProvider.Copia();
                cp._AppState.DbKey = "Application";
                var user = new RoleServiceMio(RoleManager, cp, UnitOfWorkFactory);
                var list = await user.GetAllAsync();
                if (list is null) return;
                roles = list.ToList();
                newRoleModel.TenantId = ContextProvider._AppState.TenantId ?? 0;
                newRoleModel.DbKey = ContextProvider._AppState.DbKey;
                _isValidContext = true;
            }
            else _isValidContext = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {

            throw;
        }
    }

    private void StartEdit(ApplicationRole role)
    {
        editingRoleId = role.Id;
        editRoleName = role.Name;
        editDbKey = ContextProvider._AppState.DbKey ?? "";
        editTenantId = ContextProvider._AppState.TenantId??0;
        error = success = null;
    }

    private void CancelEdit()
    {
        editingRoleId = 0;
        editRoleName = null;
    }

    private async Task SaveEdit()
    {
        if (editingRoleId == 0 || string.IsNullOrWhiteSpace(editRoleName))
        {
            error = "Nombre de rol no válido.";
            return;
        }

        error = success = null;

        var result = await RoleServiceMio.UpdateRoleAsync(editingRoleId, editRoleName);

        if (result.Succeeded)
        {
            success = "Rol actualizado.";
            editingRoleId = 0;
            editRoleName = null;
            await LoadRolesAsync();
        }
        else
        {
            error = string.Join(" ", result.Errors.Select(e => e.Description));
        }
    }

    private async Task HandleCreateRole()
    {
        error = success = null;

        if (string.IsNullOrWhiteSpace(newRoleModel.Name))
        {
            error = "El nombre es obligatorio.";
            return;
        }

        var result = await RoleServiceMio.CreateAsync(newRoleModel.Name);

        if (result.Succeeded)
        {
            success = "Rol creado.";
            newRoleModel = new NewRoleModel();
            await LoadRolesAsync();
        }
        else
        {
            error = string.Join(" ", result.Errors.Select(e => e.Description));
        }
    }

    private async Task DeleteRole(int id)
    {
        error = success = null;

        var result = await RoleServiceMio.DeleteAsync(id);
        if (result.Succeeded)
        {
            success = "Rol eliminado.";
            await LoadRolesAsync();
        }
        else
        {
            error = string.Join(" ", result.Errors.Select(e => e.Description));
        }
    }
    private void Dispose()
    {

        ContextProvider.OnContextChanged -= _onContextChangedHandler;

    }
}
