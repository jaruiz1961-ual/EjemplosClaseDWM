@page "/ListaUsuarios"
@using BlazorEbi9.Data.DataBase
@using BlazorEbi9.Model.Entidades
@using BlazorEbi9.Model.IServices
@using BlazorEbi9.Model.TenantService
@using Microsoft.EntityFrameworkCore
@inject ITenantService Service
@inject IDbContextFactory<SqLiteDbContext> Factory



<h1>ListaUsuarios</h1>

<div>
    <a href="/DetalleUsuario"><i>Añadir usuario</i></a>
</div>

@if (users == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>UserName</th>
                <th>Codigo</th>
                <th>Nivel</th>
                <th>Password</th>
                <th>Tenant</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Codigo</td>
                    <td>@user.NivelAcceso</td>
                    <td>@user.Password</td>
                    <td>@user.TenantId</td>
                    <td><a href="/DetalleUsuario/@user.Id"><i>Edit</i></a></td>
                    <td><a href="/DeleteUsuario/@user.Id"><i>Del</i></a></td>
                </tr>
            }
        </tbody>
    </table>
}
@code {
    private List<UsuarioSet> users;
    UsuarioServiceAsync UsuarioService;

    protected override async Task OnInitializedAsync()
    {

        Service.OnTenantChanged += async (o, e) =>
        {
            var context = await Factory.CreateDbContextAsync();
            var uow = new UnitOfWorkAsync<SqLiteDbContext>(context);
            UsuarioService = new UsuarioServiceAsync(uow);
            users = await UsuarioService.FindAllAsync();
            StateHasChanged();
        };
        var context = await Factory.CreateDbContextAsync();
        var uow = new UnitOfWorkAsync<SqLiteDbContext>(context);
        UsuarioService = new UsuarioServiceAsync(uow);
        users = await UsuarioService.FindAllAsync();
 
    
    }
}

