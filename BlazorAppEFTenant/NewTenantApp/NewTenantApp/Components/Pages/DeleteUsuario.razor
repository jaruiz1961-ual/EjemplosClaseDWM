@page "/DeteteUsuario/{Id:int}"   
@rendermode InteractiveServer
@using DataBase.Genericos
@using DataBase.Modelo
@using DataBase.Servicios
@inject IUnitOfWorkFactory UnitOfWorkFactory 
@inject ITenantProvider TenantProvider
@inject IContextKeyProvider ContextKeyProvider
@inject NavigationManager nav


<h3>DetalleUsuario</h3>
<p>Usuarios del tenant <strong>@TenantProvider.CurrentTenantId</strong>:</p>
<p>Usuarios del tenant <strong>@ContextKeyProvider.CurrentContextKey</strong>:</p>

<div class="container">
    <EditForm Model="@NewUser" OnValidSubmit="@HandleValidSubmit" OnInvalidSubmit="@HandleInvalidSubmit" FormName="DetalleUsuarioForm">
        <DataAnnotationsValidator />
        <div class="row">
            <div class="col-md-8">
                <div class="row" style="margin-top:10px">
                    <div class="col-md-12">
                        <label for="Codigo">Codigo #</label>
                        <input type="text" class="form-control" id="Codigo" @bind-value="NewUser.Codigo" placeholder="enter codigo ..." />
                        <ValidationMessage For="@(() => NewUser.Codigo)" />
                    </div>
                </div>

                <div class="row" style="margin-top:10px">
                    <div class="col-md-12">
                        <label for="UserName">UsertName #</label>
                        <input type="text" class="form-control" id="UserName" @bind-value="NewUser.UserName" placeholder="enter UserName ..." />
                        <ValidationMessage For="@(() => NewUser.UserName)" />
                    </div>
                </div>

                <div class="row" style="margin-top:10px">
                    <div class="col-md-12">
                        <label for="NivelAcceso">NivelAcceso #</label>
                        <input type="text" class="form-control" id="NivelAcceso" @bind-value="NewUser.NivelAcceso" placeholder="enter NivelAcceso ..." />
                        <ValidationMessage For="@(() => NewUser.NivelAcceso)" />
                    </div>
                </div>

                <div class="row" style="margin-top:10px">
                    <div class="col-md-12">
                        <label for="Password">Password #</label>
                        <input type="text" class="form-control" id="Password" @bind-value="NewUser.Password" placeholder="enter Password ..." />
                        <ValidationMessage For="@(() => NewUser.Password)" />
                    </div>
                </div>

                <div class="row" style="margin-top:10px">
                    <div class="col-md-12">
                        <label for="email">email #</label>
                        <input type="text" class="form-control" id="email" @bind-value="NewUser.email" placeholder="enter email ..." />
                        <ValidationMessage For="@(() => NewUser.email)" />
                    </div>
                </div>
                <div class="row" style="margin-top:10px">
                    <div class="col-md-12">
                        <label for="email">email #</label>
                        <input type="text" class="form-control" id="tenant" @bind-value="NewUser.TenantId" placeholder="enter tenant ..." />
                        <ValidationMessage For="@(() => NewUser.TenantId)" />
                    </div>
                </div>

                <button type="submit" class="btn btn-info" style="margin-top:10px">Save</button>
                <button type="button" class="btn btn-secondary" @onclick="Cancel" style="margin-top:10px">Cancel</button>
            </div>
            @if (displayValidationErrorMessages)
            {
                <div class="col-md-4" style="margin-top:10px">
                    <label>Validation Messages: </label>
                    <ValidationSummary />
                </div>
            }
        </div>
    </EditForm>

</div>


@code {

    [Parameter]
    public int Id { get; set; }

    private Usuario NewUser = new Usuario();
    int TenantId;
    string Contexto = "SqlServer";


    bool displayValidationErrorMessages = false;
    bool displayUserAddedToDB = false;

    private Func<Task>? _onTenantChangedHandler;
    private Func<Task>? _onContextKeyChangedHandler;


    protected override async Task OnInitializedAsync()
    {

        TenantId = TenantProvider.CurrentTenantId ?? 0;
        _onTenantChangedHandler += async () =>
       {
           await CargarAsync();
           StateHasChanged();
       };

        _onContextKeyChangedHandler += async () =>
        {
            await CargarAsync();
            StateHasChanged();
        };

        TenantProvider.OnTenantChanged += _onTenantChangedHandler;
        ContextKeyProvider.OnContextKeyChanged += _onTenantChangedHandler;
        await CargarAsync();
    }

    private async Task HandleValidSubmit(EditContext context)
    {
        displayValidationErrorMessages = false;
        displayUserAddedToDB = true;
        var servicioUsuario = new ServicioUsuarios(ContextKeyProvider, UnitOfWorkFactory, TenantProvider);
        if (Id != 0)
            servicioUsuario.DeleteAsync(Id);

     
        nav.NavigateTo("/ListaUsuarios");
    }


    private void HandleInvalidSubmit(EditContext context)
    {
        displayValidationErrorMessages = true;
        displayUserAddedToDB = false;
        //  nav.NavigateTo("/ListaUsuarios");
    }


   
    private async Task CargarAsync()
    {
        try
        {
            if (Id != 0)
            {
                var servicioUsuario = new ServicioUsuarios(ContextKeyProvider, UnitOfWorkFactory, TenantProvider);
                NewUser = await servicioUsuario.GetByIdAsync(Id);
            }
            else 
            {
                NewUser = new Usuario();
                NewUser.TenantId = TenantId;
            }

        }
        catch (Exception ex)
        {
            Console.WriteLine("EX: " + ex.GetType().FullName);
            Console.WriteLine(ex.ToString());
            Console.WriteLine("INNER: " + ex.InnerException?.GetType().FullName);
            Console.WriteLine(ex.InnerException?.ToString());
            throw;
        }
    }

    protected void Cancel()
    {
        nav.NavigateTo("/ListaUsuarios");
    }

    private async void OnTenantChanged(ChangeEventArgs e)
    {
        var _t = int.Parse((e.Value as string) ?? "0");
        TenantProvider.SetTenant(_t);
    
    }
    private void Dispose()
    {
        TenantProvider.OnTenantChanged -= _onTenantChangedHandler;
        ContextKeyProvider.OnContextKeyChanged -= _onContextKeyChangedHandler;

    }
}

