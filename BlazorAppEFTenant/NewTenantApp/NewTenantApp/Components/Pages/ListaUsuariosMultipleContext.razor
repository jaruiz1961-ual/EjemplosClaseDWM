@page "/ListaUsuariosMultipleContext"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@using DataBase.Genericos
@using DataBase.Modelo
@using DataBase.Servicios
@inject IUnitOfWorkFactory UnitOfWorkFactory 
@inject ITenantProvider TenantProvider
@inject IContextKeyProvider ContextKeyProvider
@inject NavigationManager nav
@implements IDisposable


<h3>Listado de usuarios (Genérico)</h3>



@if (TenantProvider.CurrentTenantId == null)
{
    <p><em>Debe seleccionar un tenant para ver los usuarios...</em></p>
}
else
{
    <p>Usuarios del tenant <strong>@TenantProvider.CurrentTenantId</strong>:</p>
    <p>Usuarios del contexto <strong>@ContextKeyProvider.CurrentContextKey</strong>:</p>

@if (usuarios is null)
{
    <p><em>Cargando...</em></p>
}
else if (!usuarios.Any())
{
    <p>No hay usuarios registrados .....</p>
}
else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>UserName</th>
                    <th>Codigo</th>
                    <th>Nivel</th>
                    <th>Password</th>
                    <th>Email</th>
                    <th>Tenant</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in usuarios)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                        <td>@user.Codigo</td>
                        <td>@user.Contexto</td>
                        <td>@user.Password</td>
                        <td>@user.email</td>
                        <td>@user.TenantId</td>
                        <td><a href="DetalleUsuario/@user.Id"><i>Edit</i></a></td>
                        <td><a href="DeteteUsuario/@user.Id"><i>Del</i></a></td>
                    </tr>
                }
            </tbody>
        </table>
}
}


@code {
    public List<Usuario>? usuarios { get; set; } = new List<Usuario>();
    int TenantId;
    string ContextoKey ="";

    private Func<Task>? _onTenantChangedHandler;
    private Func<Task>? _onContextKeyChangedHandler;

    protected override async Task OnInitializedAsync()
    {

        TenantId = TenantProvider.CurrentTenantId ?? 0;
        _onTenantChangedHandler += async () =>
       {
           usuarios.Clear();
           await CargarAsync();
           StateHasChanged();
       };


        TenantProvider.OnTenantChanged +=  _onTenantChangedHandler;

        await CargarAsync();
    }

    private async Task CargarAsync()
    {
        try
        {
            foreach (var contextKey in ContextKeyProvider.GetContextKeyDb())
            {
                if (contextKey.StartsWith("Api"))
                {
                    // Saltar contextos API
                    continue;
                };
                var user = new ServicioUsuarios(contextKey, UnitOfWorkFactory, TenantProvider);
                var list = await user.GetAllAsync();
                usuarios.AddRange(list);
                TenantId = TenantProvider.CurrentTenantId ?? 0;
            }

        }
        catch (Exception ex)
        {
            Console.WriteLine("EX: " + ex.GetType().FullName);
            Console.WriteLine(ex.ToString());
            Console.WriteLine("INNER: " + ex.InnerException?.GetType().FullName);
            Console.WriteLine(ex.InnerException?.ToString());
            throw;
        }
    }
    void IDisposable.Dispose()
    {
        Dispose();
    }

    private void Dispose()
    {
        TenantProvider.OnTenantChanged -= _onTenantChangedHandler;


    }
}

