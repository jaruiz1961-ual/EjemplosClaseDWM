@page "/ListaUsuariosCliente"
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

@using DataBase.Genericos
@using DataBase.Modelo
@using DataBase.Servicios
@inject IUnitOfWorkFactory UowFactory
@inject IContextProvider ContextProvider

@inject NavigationManager nav
@implements IDisposable


<h3>Listado de usuarios CLIENTE</h3>

@if (ContextProvider.TenantId == null)
{
    <p><em>Debe seleccionar un tenant para ver los usuarios...</em></p>
}
else
{
    <p>TenantId <strong>@ContextProvider.TenantId</strong>:</p>
    <p>ContextKeDb <strong>@ContextProvider.DbKey</strong>:</p>
    <p>Mode <strong>@ContextProvider.ConnectionMode</strong>:</p>
    @if (@ContextProvider.ConnectionMode != "Ef")
    {
        <p>ApiName <strong>@ContextProvider.ApiName</strong>:</p>
    }


@if (usuarios is null)
{
    <p><em>Cargando...</em></p>
}
else if (!usuarios.Any())
{
    <p>No hay usuarios registrados .....</p>
}
else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>UserName</th>
                    <th>Codigo</th>
                    <th>Nivel</th>
                    <th>Password</th>
                    <th>Email</th>
                    <th>Tenant</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in usuarios)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                        <td>@user.Codigo</td>
                        <td>@user.Contexto</td>
                        <td>@user.Password</td>
                        <td>@user.email</td>
                        <td>@user.TenantId</td>
                        <td><a href="DetalleUsuarioCliente/@user.Id"><i>Edit</i></a></td>
                        <td><a href="DeteteUsuarioCliente/@user.Id"><i>Del</i></a></td>
                    </tr>
                }
            </tbody>
        </table>
}



@code {
    public List<Usuario>? usuarios { get; set; } = new List<Usuario>();
    int TenantId;
    string ContextoKey ="";


    private Func<Task>? _onContextChangedHandler;

    private GenericDataService<Usuario> usuarioService;


    protected override async Task OnInitializedAsync()
    {
        _onContextChangedHandler += async () =>
        {
            await CargarAsync();
            StateHasChanged();
        };

        ContextProvider.OnContextChanged += _onContextChangedHandler;
        await CargarAsync();
    }

    private async Task CargarAsync()
    {
        try
        {
            IContextProvider cp = ContextProvider.Copia();
            cp.ConnectionMode = "Api";

            usuarioService = new ServicioUsuarios(cp, UowFactory);
            var list = await usuarioService.GetAllAsync();
            usuarios = list.ToList();

        }
        catch (Exception ex)
        {
            Console.WriteLine("EX: " + ex.GetType().FullName);
            Console.WriteLine(ex.ToString());
            Console.WriteLine("INNER: " + ex.InnerException?.GetType().FullName);
            Console.WriteLine(ex.InnerException?.ToString());
            throw;
        }
    }

    void IDisposable.Dispose()
    {
        Dispose();
    }

    private void Dispose()
    {

        ContextProvider.OnContextChanged -= _onContextChangedHandler;

    }
}

