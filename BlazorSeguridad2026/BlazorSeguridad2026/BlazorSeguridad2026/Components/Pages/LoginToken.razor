@page "/LoginToken"
@rendermode InteractiveServer



@inject IHttpClientFactory HttpFactory
@inject IContextProvider ContextProvider
@inject NavigationManager Nav
@inject IConfiguration Configuration

@if (isLoading)
{
    <div class="spinner-container">
        <div class="spinner"></div>
        <p>Cargando sesión...</p>
    </div>
}
else
{
    <h3>Cargando sesión...</h3>
}

@code {
    private bool _initialized;
    private HttpClient Http = default!;
    string email = string.Empty;
    string password = string.Empty;
    string UrlApi = string.Empty;
    bool isLoading = true;

    protected override void OnInitialized()
    {
        var uri = new Uri(Nav.Uri);
        var query = System.Web.HttpUtility.ParseQueryString(uri.Query);

        email = query["email"] ?? string.Empty;
        password = query["password"] ?? string.Empty;
        UrlApi = Configuration["ConnectionStrings:UrlApi"] ?? string.Empty;

        Http = HttpFactory.CreateClient();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender || _initialized)
            return;

        // Si faltan datos, redirige directamente
        if (string.IsNullOrWhiteSpace(email) || string.IsNullOrWhiteSpace(password) || string.IsNullOrWhiteSpace(UrlApi))
        {
            isLoading = false;
            Nav.NavigateTo("/Account/Login?error=missing_credentials", forceLoad: true);
            return;
        }

        var loginData = new LoginDataUser(email, password);

        try
        {
            var response = await Http.PostAsJsonAsync($"{UrlApi}api/auth/token", loginData);

            if (response.IsSuccessStatusCode)
            {
                var token = await response.Content.ReadAsStringAsync();
                await ContextProvider.SetFromTokenApiAsync(token);

                _initialized = true;
                isLoading = false;
                Nav.NavigateTo("/", forceLoad: true);
            }
            else
            {
                isLoading = false;
                Nav.NavigateTo("/Account/Login?error=invalid_credentials", forceLoad: true);
            }
        }
        catch (Exception ex)
        {
            isLoading = false;
            Nav.NavigateTo($"/Error?error={Uri.EscapeDataString(ex.Message)}", forceLoad: true);
        }
    }
}
