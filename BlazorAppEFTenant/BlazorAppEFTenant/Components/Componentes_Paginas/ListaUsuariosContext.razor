@typeparam TContext
@using DataBase.Genericos
@using DataBase.Modelo
@using Microsoft.EntityFrameworkCore
@inject IUnitOfWorkFactory UnitOfWorkFactory
@inject string Contexto
@inject ITenantProvider Tenant


<h3>Listado de usuarios (Genérico)</h3>

@if (usuarios is null)
{
    <p><em>Cargando...</em></p>
}
else if (!usuarios.Any())
{
    <p>No hay usuarios registrados para este tenant.....</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>TenantId</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in usuarios)
            {
                <tr>
                    <td>@usuario.Id</td>
                    <td>@usuario.UserName</td>
                    <td>@usuario.TenantId</td>
                </tr>
            }
        </tbody>
    </table>
}

@code 
{
    public List<Usuario>? usuarios { get; set; }
    private IUnitOfWork uow;

    protected override async Task OnInitializedAsync()
    {
        //   Tenant.SetTenant(2);
        // //  uow = UnitOfWorkFactory.Create(Contexto);

        //   var usuarioRepo = uow.GetRepository<Usuario>();
        //  // usuarios = (await usuarioRepo.GetAllAsync()).ToList();
        //   usuarios = await GetUsersAsync();
        await CargarAsync();
        StateHasChanged();
    }

    private async Task CargarAsync()
    {
        try
        {
            Tenant.SetTenant(2);
            uow = UnitOfWorkFactory.Create(Contexto); // devuelve IUnitOfWork
            var repo = uow.GetRepository<Usuario>();
            var list = await repo.GetAllAsync();
            usuarios = list.ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine("EX: " + ex.GetType().FullName);
            Console.WriteLine(ex.ToString());
            Console.WriteLine("INNER: " + ex.InnerException?.GetType().FullName);
            Console.WriteLine(ex.InnerException?.ToString());
            throw;
        }
    }
}

