@code {
    private string? currentUrl;
    private bool adminMenuExpanded = false;
    int TenantId = 0;
    string email = string.Empty;
    string password = string.Empty;
    string UrlApi = string.Empty;
    bool isLoading = true;
   

    private void ToggleAdminMenu()
        => adminMenuExpanded = !adminMenuExpanded;

    private int SelectedTenantId;
    private string SelectedDbKey;

    protected override async void OnInitialized()
    {
        var uri = new Uri(NavigationManager.Uri);
        var query = System.Web.HttpUtility.ParseQueryString(uri.Query);

        email = query["email"] ?? string.Empty;
        password = query["password"] ?? string.Empty;

        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
        SelectedTenantId = ContextProvider._AppState.TenantId ?? 0;
        SelectedDbKey = ContextProvider._AppState.DbKey ?? "InMemory";

        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var principal = authState.User;
        var userId = principal.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

       
    }

    private async Task Actualizar()
    {
        ContextProvider._AppState.TenantId = SelectedTenantId;
        ContextProvider._AppState.DbKey = SelectedDbKey;
        await ContextProvider.SaveAllContextAsync(ContextProvider);
        await CambiarTenant();

    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await ContextProvider.ReadAllContext(true);
            SelectedTenantId = ContextProvider._AppState.TenantId ?? 0;
            SelectedDbKey = ContextProvider._AppState.DbKey;
        }

    }


    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    private string? _errorCambiarTenant;

    private async Task CambiarTenant()
    {
        _errorCambiarTenant = null;

        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var principal = authState.User;

            var user = await UserManager.GetUserAsync(principal);
            if (user is null)
                throw new InvalidOperationException("Usuario no autenticado.");

            var claims = await UserManager.GetClaimsAsync(user);
            var oldTenantClaim = claims.FirstOrDefault(c => c.Type == "TenantId");
            if (oldTenantClaim is not null)
                await UserManager.RemoveClaimAsync(user, oldTenantClaim);

            await UserManager.AddClaimAsync(user, new Claim("TenantId", SelectedTenantId.ToString()));

            // IMPORTANTE: no llames RefreshSignInAsync aquí en Blazor interactivo

            // Fuerza recarga de página para que todo se re-evalúe
            NavigationManager.NavigateTo(NavigationManager.Uri, forceLoad: true);
        }
        catch (Exception ex)
        {
            _errorCambiarTenant = $"Error al cambiar de tenant: {ex.Message}";
        }
    }

    

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}

