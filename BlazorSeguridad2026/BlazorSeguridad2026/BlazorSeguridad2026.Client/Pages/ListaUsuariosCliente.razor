@page "/ListaUsuariosCliente"
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: true))


@using BlazorSeguridad2026.Base.Genericos
@using BlazorSeguridad2026.Base.Seguridad


@using BlazorSeguridad2026.Data.Modelo
@using BlazorSeguridad2026.Data.Servicios
@using Microsoft.AspNetCore.Authorization
@using BlazorSeguridad2026.Base.Cultures



@inject IUnitOfWorkFactory UnitOfWorkFactory
@inject IContextProvider ContextProvider
@inject NavigationManager nav
@implements IDisposable

@attribute [Authorize]

<h3>Listado de usuarios CLIENTE</h3>

cliente: @estadoCliente
servidor:@estadoServidor
cultura:@estadoCultura


@if (_isValidContext == false)
{
    <p><em>Debe seleccionar un contexto de ejecución para ver los usuarios...</em></p>
}
else if (!usuarios.Any())
{
    <p>No hay usuarios registrados .....</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>UserName</th>
                <th>Codigo</th>
                <th>Nivel</th>
                <th>Password</th>
                <th>Email</th>
                <th>Tenant</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in usuarios)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Codigo</td>
                    <td>@user.Contexto</td>
                    <td>@user.Password</td>
                    <td>@user.Email</td>
                    <td>@user.TenantId</td>
                    <td><a href="DetalleUsuarioCliente/@user.Id"><i>Edit</i></a></td>
                    <td><a href="DeteteUsuarioCliente/@user.Id"><i>Del</i></a></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {

    int currentCount = 0;
    private bool _initialized;
    private bool _isInitializing;
    private string estadoCliente = "";
    private string estadoServidor;
    private string estadoCultura;
    bool _isValidContext;
    public List<Usuario>? usuarios { get; set; } = new();

    private Action? _onContextChangedHandler;

    protected override async Task OnInitializedAsync()
    {

        _onContextChangedHandler += async () =>
        {
            await ActualizarContextoAsync();
            await CargarDatosAsync();

        };
        ContextProvider.OnContextChanged += _onContextChangedHandler;

    }


    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await ActualizarContextoAsync();
            await CargarDatosAsync();
        }
    }

    private async Task ActualizarContextoAsync()
    {

        await ContextProvider.ReadStates();
        estadoCliente = ContextProvider.GetValor(ClavesEstado.PaginaCliente,StorageKeys.ClienteState) ?? "Ninguno";
        estadoServidor = ContextProvider.GetValor(ClavesEstado.PaginaServidor,StorageKeys.ServerState) ?? "Ninguno";
        estadoCultura = ContextProvider.GetCultureName(StorageKeys.ClienteState);
        ContextProvider.SetClaveValor(ClavesEstado.EsPaginaCliente, "true", StorageKeys.ClienteState);
        ContextProvider.SetClaveValor(ClavesEstado.EsPaginaServidor, "false", StorageKeys.ServerState);
        await ContextProvider.SaveStates(false);

    }


    private async Task CargarDatosAsync()
    {
        try
        {
            if (ContextProvider.IsValidState(StorageKeys.ClienteState))
            {
                var servicioUsuarios = new ServicioUsuariosCliente(ContextProvider, UnitOfWorkFactory);
                var list = await servicioUsuarios.ObtenerTodosAsync(true);
                if (list is null) return;
                usuarios = list.ToList();
                _isValidContext = true;
            }
            else _isValidContext = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {

            throw;
        }
    }


    void IDisposable.Dispose()
    {
        Dispose();
    }

    public void Dispose()
    {
        // 7. Desuscribirse para evitar fugas de memoria
        ContextProvider.OnContextChanged -= _onContextChangedHandler;
    }
}
