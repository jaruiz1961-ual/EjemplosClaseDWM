@page "/counter"


@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))


@inject IContextProvider ContextProvider
@implements IDisposable



<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>
cliente: @estadoCliente
servidor:@estadoServidor
cultura: @estadoCultura
<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>



@code {
    private int currentCount = 0;
    private string? AppState;
    private string? TenantId;
    private string? DbKey;


    private bool _initialized;
    private bool _isInitializing;
    private string estadoCliente = "";
    private string estadoServidor;
    private string estadoCultura = "";
    private Action? _onContextChangedHandler;

    protected override async Task OnInitializedAsync()
    {

        _onContextChangedHandler += async () =>
        {
            await ActualizarContextoAsync();

        };
        ContextProvider.OnContextChanged += _onContextChangedHandler;

    }

    private async void IncrementCount()
    {
        currentCount++;

        // 4. Persistir de nuevo en el contexto
        ContextProvider.SetClaveValor(ClavesEstado.PaginaCliente, "COUNTER=" + currentCount.ToString(),StorageKeys.ClienteState);
        await ContextProvider.SaveState(StorageKeys.ClienteState);
    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_initialized)
        {
            ContextProvider.SetClaveValor(ClavesEstado.EsPaginaCliente, "true", StorageKeys.ClienteState);
            ContextProvider.SetClaveValor(ClavesEstado.EsPaginaServidor, "false", StorageKeys.ClienteState);
            await ContextProvider.SaveState(StorageKeys.ClienteState);
            await ActualizarContextoAsync();
            _initialized = true;

        }
    }

    private async Task ActualizarContextoAsync()
    {

        await ContextProvider.ReadStates();
        estadoCliente = ContextProvider.GetValor(ClavesEstado.PaginaCliente, StorageKeys.ClienteState) ?? "Ninguno";
        estadoServidor = ContextProvider.GetValor(ClavesEstado.PaginaServidor, StorageKeys.ServerState) ?? "Ninguno";
        estadoCultura = ContextProvider.GetCultureName(StorageKeys.ServerState);


    }


   


    void IDisposable.Dispose()
    {
        Dispose();
    }

    public void Dispose()
    {
        // 7. Desuscribirse para evitar fugas de memoria
        ContextProvider.OnContextChanged -= _onContextChangedHandler;
    }



}
