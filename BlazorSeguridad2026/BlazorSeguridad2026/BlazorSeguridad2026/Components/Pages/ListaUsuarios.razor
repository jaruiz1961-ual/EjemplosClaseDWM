@page "/ListaUsuarios"
@rendermode @(new InteractiveServerRenderMode(prerender: true))

@using BlazorSeguridad2026.Base.Genericos
@using BlazorSeguridad2026.Base.Seguridad
@using BlazorSeguridad2026.Data.Modelo
@using BlazorSeguridad2026.Data.Servicios

@inject IUnitOfWorkFactory UnitOfWorkFactory 
@inject IContextProvider ContextProvider 





@implements IDisposable




<h3>Listado de usuarios  (Genérico)</h3>



cliente: @estadoCliente
servidor:@estadoServidor
cultura:@estadoCultura

@if (_isValidContext == false)
{
    <p><em>Debe seleccionar un contexto de ejecución para ver los usuarios...</em></p>
}
else if (!usuarios.Any())
{
    <p>No hay usuarios registrados .....</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>UserName</th>
                <th>Codigo</th>
                <th>Nivel</th>
                <th>Password</th>
                <th>Email</th>
                <th>Tenant</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in usuarios)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Codigo</td>
                    <td>@user.Contexto</td>
                    <td>@user.Password</td>
                    <td>@user.Email</td>
                    <td>@user.TenantId</td>
                    <td><a href="DetalleUsuario/@user.Id"><i>Edit</i></a></td>
                    <td><a href="DeteteUsuario/@user.Id"><i>Del</i></a></td>
                </tr>
            }
        </tbody>
    </table>    
}


@code {



    public List<Usuario>? usuarios { get; set; } = new List<Usuario>();
    int TenantId;
    string ContextoKey ="Key";
    private string estadoCliente = "";
    private string estadoServidor;
    private string estadoCultura;

    bool _isValidContext;

    private Action? _onContextChangedHandler;

    protected override async Task OnInitializedAsync()
    {
       
        _onContextChangedHandler += async () =>
        {
            await ActualizarContextoAsync();
            await CargarDatosAsync();

        };
        ContextProvider.OnContextChanged += _onContextChangedHandler;
        
    }


    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await ActualizarContextoAsync();
            await CargarDatosAsync();
        }
    }

    private async Task ActualizarContextoAsync()
    {
        if (ContextProvider.IsValidState(StorageKeys.ServerState))
        {
 
            await ContextProvider.ReadStates();

            estadoCliente = ContextProvider.GetValor(ClavesEstado.PaginaCliente, StorageKeys.ServerState) ?? "Ninguno";
            estadoServidor = ContextProvider.GetValor(ClavesEstado.PaginaServidor, StorageKeys.ServerState) ?? "Ninguno";
            estadoCultura = ContextProvider.GetCultureName( StorageKeys.ServerState);
            ContextProvider.SetClaveValor(ClavesEstado.EsPaginaServidor, "true", StorageKeys.ServerState);
            ContextProvider.SetClaveValor(ClavesEstado.EsPaginaCliente, "false", StorageKeys.ClienteState);
            await ContextProvider.SaveStates(false);
        }
   
    }


    private async Task CargarDatosAsync()
    {
        try
        {
            if (ContextProvider.IsValidState(StorageKeys.ServerState))
            {  
                var servicioUsuarios = new ServicioUsuarios(ContextProvider, UnitOfWorkFactory);
                var list = await servicioUsuarios.ObtenerTodosAsync(true);
                if (list is null) return;
                usuarios = list.ToList();
                _isValidContext = true;                
            }
            else _isValidContext = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {

            throw;
        }
    }

    void IDisposable.Dispose()
    {
        Dispose();
    }

    private void Dispose()
    {
  
        ContextProvider.OnContextChanged -= _onContextChangedHandler;

    }
}

